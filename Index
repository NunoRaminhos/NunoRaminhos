    <!-- Initialize Lucide Icons -->
    <script>
        lucide.createIcons();
        
        // Simple function to dynamically adjust grid height on screen resize for a better look
        const adjustGrid = () => {
            const tallItems = document.querySelectorAll('.grid-item-tall');
            // If window width is less than 1024px (lg breakpoint), use the mobile height
            if (window.innerWidth < 1024) {
                tallItems.forEach(item => item.style.height = '30rem');
            } else {
                 // Otherwise, use the desktop height defined in CSS
                 tallItems.forEach(item => item.style.height = '45rem');
            }
        };

        window.addEventListener('resize', adjustGrid);
        window.addEventListener('load', adjustGrid);
    </script>
